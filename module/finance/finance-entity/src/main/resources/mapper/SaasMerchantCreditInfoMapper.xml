<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beitu.saas.finance.dao.impl.SaasMerchantCreditInfoDaoImpl">

    <select id="selectCreditInfoByMerchantCode" parameterType="map" resultType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        from saas_merchant_credit_info
        where 1=1
        <if test="merchantCode !=null">
            and merchant_code=#{merchantCode,jdbcType=VARCHAR}
        </if>
        and deleted=0
    </select>
</mapper>